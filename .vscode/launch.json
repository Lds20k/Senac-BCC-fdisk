{
    "configurations": [
      {
        "name": "gdb: launch",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/bin/fdisk-bcc",
        "args": [
          "-l ${workspaceFolder}/bin/mbr.bin"
        ],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "launchCompleteCommand": "exec-run",
        "linux": {
          "MIMode": "gdb",
          "miDebuggerPath": "/usr/bin/gdb",
          "preLaunchTask": "make: debug"
        }
      }
    ]
  }